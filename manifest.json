{
  "manifest_version": 3,
  "name": "Screenshot & Annotation Tool",
  "version": "7.0.0",
  "description": "Professional screenshot tool with advanced annotations, full-page capture, Google Drive integration with folder organization, QR codes, batch operations, upload history, and multi-format export (PNG/JPG/PDF)",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "windows",
    "downloads",
    "identity",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.googleapis.com/*",
    "https://tinyurl.com/*",
    "https://api.qrserver.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "hand-drawn-arrows/*.png",
        "hand-drawn-arrows/arrow1.png",
        "hand-drawn-arrows/arrow2.png",
        "hand-drawn-arrows/arrow3.png",
        "hand-drawn-arrows/arrow4.png",
        "google-drive.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture screenshot with annotations"
    },
    "capture-fullpage": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Capture full page screenshot"
    },
    "capture-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Capture selected area only"
    }
  }
}
